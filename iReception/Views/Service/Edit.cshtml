@model SetServiceDto
@{
	ViewBag.Title = "Update service";
}

<h1>Update service</h1>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="card mb-2">
				<div class="card-header">Info</div>
				<div class="card-body">
					<h5 class="card-title">
						<label asp-for="Name"></label>
					</h5>
					<input asp-for="Name" class="form-control" value="@ViewBag.Service.Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="Description"></label>
					</h5>
					<input asp-for="Description" class="form-control" value="@ViewBag.Service.Description" />
					<span asp-validation-for="Description" class="text-danger"></span>
					<div class="form-check-inline mt-3">
						@if (ViewBag.Service.IsAvailable)
						{
							<input asp-for="IsAvailable " class="form-check-input" type="checkbox" id="inlineCheckbox1" checked="checked" />
						}
						else
						{
							<input asp-for="IsAvailable " class="form-check-input" type="checkbox" id="inlineCheckbox1" />
						}
						<span asp-validation-for="IsAvailable" class="text-danger"></span>
						<label class="form-check-label" for="inlineCheckbox1">Available</label>
					</div>
					<h5 class="card-title">
				</div>
			</div>
			<a asp-controller="service" asp-action="list" class="btn btn-info">Return to list</a>
			<a asp-controller="service" asp-action="show" asp-route-id="@ViewBag.Service.Id" class="btn btn-info">Return to service</a>
			<button type="submit" class="btn btn-primary">Update service</button>
		</form>
	</div>
	
</div>