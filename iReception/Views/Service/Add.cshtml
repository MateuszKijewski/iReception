@model AddServiceDto
@{
	ViewBag.Title = "Add service";
}

<h1>Add new service</h1>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<h2>Service details</h2>
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-check-inline mt-3">
				<input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
				<span asp-validation-for="IsAvailable" class="text-danger"></span>
				<label class="form-check-label" asp-for="IsAvailable"></label>
			</div><br />
			<button type="submit" class="mt-2 btn btn-primary">Add service</button>
		</form>
	</div>
</div>