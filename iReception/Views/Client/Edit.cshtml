@model SetClientDto
@{
	ViewBag.Title = "Update client";
}

<h1>Update client</h1>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="card mb-2">
				<div class="card-header">Contact info</div>
				<div class="card-body">
					<h5 class="card-title">
						<label asp-for="FirstName"></label>
					</h5>
					<input asp-for="FirstName" class="form-control" value="@ViewBag.Client.FirstName" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="LastName"></label>
					</h5>
					<input asp-for="LastName" class="form-control" value="@ViewBag.Client.LastName" />
					<span asp-validation-for="LastName" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="PhoneNumber"></label>
					</h5>
					<input asp-for="PhoneNumber" class="form-control" value="@ViewBag.Client.PhoneNumber" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="Email"></label>
					</h5>
					<input asp-for="Email" class="form-control" value="@ViewBag.Client.Email" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="card mb-2">
				<div class="card-header">Billing and authentication info</div>
				<div class="card-body">
					<h5 class="card-title">
						<label asp-for="PaymentMethod"></label>
					</h5>
					<input asp-for="PaymentMethod" class="form-control" value="@ViewBag.Client.PaymentMethod" />
					<span asp-validation-for="PaymentMethod" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="CreditCard"></label>
					</h5>
					<input asp-for="CreditCard" class="form-control" value="@ViewBag.Client.CreditCard" />
					<span asp-validation-for="CreditCard" class="text-danger"></span>
					<hr />
					<h5 class="card-title">
						<label asp-for="IdDocumentNumber"></label>
					</h5>
					<input asp-for="IdDocumentNumber" class="form-control" value="@ViewBag.Client.IdDocumentNumber" />
					<span asp-validation-for="IdDocumentNumber" class="text-danger"></span>
				</div>
			</div>
			<a asp-controller="client" asp-action="list" class="btn btn-info">Return to list</a>
			<a asp-controller="client" asp-action="show" asp-route-id="@ViewBag.Client.Id" class="btn btn-info">Return to client</a>
			<button type="submit" class="btn btn-primary">Update client</button>
		</form>
	</div>
	
</div>