@model GetClientDto
@{
	ViewBag.Title = "Show client";
}

<h1>Client details</h1>
<div class="row">
	<div class="col-md-12">
		<div class="card mb-2">
			<div class="card-header">Contact info</div>
			<div class="card-body">
				<h5 class="card-title">
					<label asp-for="FirstName"></label>
				</h5>
				<p class="card-text">@Model.FirstName</p>
				<hr />
				<h5 class="card-title">
					<label asp-for="LastName"></label>
				</h5>
				<p class="card-text">@Model.LastName</p>
				<hr />
				<h5 class="card-title">
					<label asp-for="PhoneNumber"></label>
				</h5>
				<p class="card-text">@Model.PhoneNumber</p>
				<hr />
				<h5 class="card-title">
					<label asp-for="Email"></label>
				</h5>
				<p class="card-text">@Model.Email</p>
			</div>
		</div>
		<div class="card mb-2">
			<div class="card-header">Billing and authentication info</div>
			<div class="card-body">
				<h5 class="card-title">
					<label asp-for="PaymentMethod"></label>
				</h5>
				<p class="card-text">@Model.PaymentMethod</p>
				<hr />
				<h5 class="card-title">
					<label asp-for="CreditCard"></label>
				</h5>
				<p class="card-text">@Model.CreditCard</p>
				<hr />
				<h5 class="card-title">
					<label asp-for="IdDocumentNumber"></label>
				</h5>
				<p class="card-text">@Model.IdDocumentNumber</p>
			</div>
		</div>
		<a asp-controller="client" asp-action="list" class="btn btn-info">Return to list</a>
		<a asp-controller="client" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
	</div>
	
</div>