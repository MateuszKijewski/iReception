@model AddMinuteServiceDto
@{
	ViewBag.Title = "Add minute service";
}

<h1>Add new minute service</h1>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<h2>Service details</h2>
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PricePerMinute"></label>
				<input asp-for="PricePerMinute" class="form-control" />
				<span asp-validation-for="PricePerMinute" class="text-danger"></span>
			</div>
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">Min - Max rental time</span>
				</div>
				<input asp-for="MinTime" type="number" aria-label="Min time" class="form-control">
				<input asp-for="MaxTime" type="number" aria-label="Max time" class="form-control">
			</div>
			<div class="form-check-inline mt-3">
				<input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
				<span asp-validation-for="IsAvailable" class="text-danger"></span>
				<label class="form-check-label" asp-for="IsAvailable"></label>
			</div><br />
			<button type="submit" class="mt-2 btn btn-primary">Add minute service</button>
		</form>
	</div>
</div>